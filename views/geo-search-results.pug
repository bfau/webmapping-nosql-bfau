html
   head
       title Recherche
       link(rel="stylesheet", type="text/css", href="https://cdn.jsdelivr.net/gh/openlayers/openlayers.github.io@master/en/v6.5.0/css/ol.css")
       link(rel="stylesheet", type="text/css", href="static/style.css")
       script(type="text/javascript", src="https://cdn.jsdelivr.net/gh/openlayers/openlayers.github.io@master/en/v6.5.0/build/ol.js")

   body
     div(id='map')
     form(id='form' action = "/geo-search-results", method = "GET")
        div
           label(for = "longitude") Longitude:
           input(name = "longitude" value = lon)
        br
        div
           label(for = "latitude") Latitude:
           input(name = "latitude" value = lat)
        br
        div
           label(for = "radius") Radius:
           input(name = "radius" value = rad)
        br
        div
           label(for = "titre") Titre:
           input(name = "titre" value = titre)
        br
        button(type = "submit") Send
     button(id = "getInfoMap") Get map position
     <br>Map syncro:
     input( type='checkbox'  id='myCheckbox' )
     h1 RÃ©sultats
     div(id='result')
       each result in results
         div
           h2= result.properties.ins_nom
           p
             span Type :
             span= result.properties.eqt_type
           p
             span Localisation :
             span= result.geometry.coordinates.join(", ")




   script(type="text/javascript", src="static/map.js")
